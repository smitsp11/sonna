# Sonna Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application
APP_NAME=Sonna Backend
DEBUG=True
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database (PostgreSQL / Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/sonna

# Google Gemini API (Required for AI features)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Pinecone (Vector Database for Memory)
# Get your key from: https://www.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=sonna-memories

# ElevenLabs (Text-to-Speech)
# Get your key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
DEFAULT_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Redis (Required for Celery)
REDIS_URL=redis://localhost:6379/0

# CORS (Optional - adjust for your frontend)
BACKEND_CORS_ORIGINS=*
